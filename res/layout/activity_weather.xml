

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00BFFF"
    tools:context="com.mjas.myweatherapp.WeatherActivity$PlaceholderFragment" >

   
    
     <TextView
        android:id="@+id/locationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <TextView
        android:id="@+id/blankLabel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blankLabel1"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />
    
     <TextView
        android:id="@+id/blankLabel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/timeLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
    <!-- Image weather condition -->
     <ImageView
        android:id="@+id/imageID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blankLabel2"
        android:layout_centerHorizontal="true" />
       
        
<!-- <TextView
        android:id="@+id/blankLabel3"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/imageID"
        android:textAppearance="?android:attr/textAppearanceLarge" /> -->
   
   
    
    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageID"
          android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="20sp" />
    
    
     <TextView
        android:id="@+id/summaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/temperatureLabel"
           android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="17sp" />
     
   <!--   <TextView
        android:id="@+id/blankLabel3"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
         android:layout_below="@+id/summaryLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" /> -->
     <TextView
        android:id="@+id/blankLabel4"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summaryLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <RelativeLayout 
          android:id="@+id/relative1L"
          android:layout_width="match_parent"
    	  android:layout_height="wrap_content"
          android:layout_below="@+id/blankLabel4"
           android:layout_centerHorizontal="true">
          
   <TextView
        android:id="@+id/humidityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/humidityValue"
        android:text="Humidity: "
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="15sp" />
     
    <TextView
        android:id="@+id/humidityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
       android:layout_toRightOf="@+id/humidityText"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="15sp" />
    
     

    </RelativeLayout>
    <RelativeLayout 
          android:id="@+id/relative2L"
          android:layout_width="match_parent"
    	  android:layout_height="wrap_content"
          android:layout_below="@+id/relative1L"
           android:layout_centerHorizontal="true">
     <TextView
        android:id="@+id/precipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/precipValue"
        android:text="Preci Probability: "
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="15sp" />
     <TextView
        android:id="@+id/precipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/precipText"
         
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="15sp" />
     </RelativeLayout>
     
   
      <RelativeLayout 
          android:id="@+id/relative3L"
          android:layout_width="match_parent"
    	  android:layout_height="wrap_content"
          android:layout_below="@+id/relative2L"
            android:layout_centerHorizontal="true">
     <TextView
        android:id="@+id/windText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/windValue"
        android:text="Wind: "
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="15sp" />
     <TextView
        android:id="@+id/windValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/windText"
          
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textSize="15sp" />
    
     </RelativeLayout>
    
     
     
     
</RelativeLayout>
